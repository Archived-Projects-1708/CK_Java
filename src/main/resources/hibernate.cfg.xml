<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://DESKTOP-9U8KHKR:1433;databaseName=JapaneseExamBank;encrypt=false; trustServerCertificate=true</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">123</property>

        <!-- SQL Server dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServer2012Dialect</property>

        <!-- Hiển thị SQL trong console (tùy chọn) -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Tự động tạo/update bảng -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapping các entity class -->
        <mapping class="com.example.exambank.model.Category"/>
        <mapping class="com.example.exambank.model.Level"/>
        <mapping class="com.example.exambank.model.Question"/>
        <mapping class="com.example.exambank.model.AnswerOption"/>
        <mapping class="com.example.exambank.model.Exam"/>
        <mapping class="com.example.exambank.model.ExamQuestion"/>
        <mapping class="com.example.exambank.model.ExportedExam"/>

    </session-factory>
</hibernate-configuration>